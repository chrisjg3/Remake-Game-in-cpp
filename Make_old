

build: game

game: Item.cpp Entity.cpp InventoryList.cpp Healing.cpp basefile.cpp
	g++ basefile.cpp Item.o Entity.o InventoryList.o Healing.o -o game

basefile.o: basefile.cpp 
	g++ -c basefile.cpp -o basefile.o

Entity.o: $(SECONDFOLDER)/Entity.cpp  
	g++ -c $(SECONDFOLDER)/Entity.cpp -o Entity.o

Item.o: $(FOLDER)/Item.cpp  
	g++ -c $(FOLDER)/Item.cpp  -o Item.o

InventoryList.o: $(FOLDER)/InventoryList.cpp  
	g++ -c $(FOLDER)/InventoryList.cpp -o InventoryList.o


Healing.o: $(FOLDER)/$(THIRDFOLDER)/Healing.cpp 
	g++ -c $(FOLDER)/$(THIRDFOLDER)/Healing.cpp -o Healing.o


